#!/bin/sh
##############################################################################
# cleans up parts of your enlightenment cache                                #
# Copyright 1999 The Rasterman                                               #
##############################################################################

if [ $# -lt 2 ]; then
  echo "usage:"
  echo "    "$0" [ all | pager | bgsel | config ]"
  exit
fi

if [ $1 = "all" ]; then
  rm -rf ~/.enlightenment/cached/bgsel/*
  rm -rf ~/.enlightenment/cached/bgsel/.*
  rm -rf ~/.enlightenment/cached/cfg/*
  rm -rf ~/.enlightenment/cached/cfg/.*
  rm -rf ~/.enlightenment/cached/pager/*
  rm -rf ~/.enlightenment/cached/pager/.*
  exit
fi

if [ $1 = "pager" ]; then
  rm -rf ~/.enlightenment/cached/pager/*
  rm -rf ~/.enlightenment/cached/pager/.*
  exit
fi

if [ $1 = "config" ]; then
  rm -rf ~/.enlightenment/cached/cfg/*
  rm -rf ~/.enlightenment/cached/cfg/.*
  exit
fi

if [ $1 = "bgsel" ]; then
  rm -rf ~/.enlightenment/cached/bgsel/*
  rm -rf ~/.enlightenment/cached/bgsel/.*
  exit
fi
