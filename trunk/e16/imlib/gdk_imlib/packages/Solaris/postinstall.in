#!/bin/sh
echo
echo Installation complete.  Please modify your user environment
echo
echo For korn or bourne shell:
echo    MANPATH=\${MANPATH}:$BASEDIR/man
echo    LD_LIBRARY_PATH=\${LD_LIBRARY_PATH}:$BASEDIR/lib
echo    export PATH MANPATH LD_LIBRARY_PATH
echo 
echo For C shell:
echo    setenv MANPATH \$MANPATH:$BASEDIR/man
echo    setenv LD_LIBRARY_PATH \$LD_LIBRARY_PATH:$BASEDIR/lib
echo
echo
rm -rf /etc/imrc > /dev/null 2>&1 
rm -rf /etc/im_palette.pal > /dev/null 2>&1 
rm -rf $BASEDIR/lib/libImlib.so > /dev/null 2>&1
ln -s $BASEDIR/etc/imrc /etc/imrc
ln -s $BASEDIR/etc/im_palette.pal /etc/im_palette.pal
ln -s $BASEDIR/lib/libgdk_imlib.so.@VERSION@ $BASEDIR/lib/libgdk_imlib.so
exit 0
