    elementary-alarm \
    gpe-scap \
-   libefso \
-   essential-dialer \
+#   libefso \
+#   essential-dialer \
 "
 
 IMAGE_INSTALL = "\
@@ -156,7 +143,6 @@ fso_rootfs_postprocess() {
     date "+%m%d%H%M%Y" >./etc/timestamp
     # alias foo
     echo "alias pico=nano" >>./etc/profile
-#    echo "alias fso='cd /local/pkg/fso'" >>./etc/profile
