   mtd-utils \
   nano \
   powertop \
   s3c24xx-gpio \
   sysstat \
-#  tcpdump \
 "
 
 # audio
@@ -116,23 +111,15 @@ ZHONE_INSTALL = "\
   fso-gsm0710muxd \
   frameworkd \
   fso-gpsd \
-#  zhone \
+  zhone \
 "
 
