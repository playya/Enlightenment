#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

DEB_PYTHON_SYSTEM=pysupport

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/python-distutils.mk

install/python-emotion::
	mkdir -p debian/python-emotion/usr/share/python-emotion
	cp -r examples debian/python-emotion/usr/share/python-emotion
	rm -f debian/python-emotion/usr/share/python-emotion/examples/.svn
	chmod -R 755 debian/python-emotion/usr/share/python-emotion

