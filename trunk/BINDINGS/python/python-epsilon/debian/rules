#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

DEB_PYTHON_SYSTEM=pysupport

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/python-distutils.mk

install/python-epsilon::
	mkdir -p debian/python-epsilon/usr/share/python-epsilon
	cp -r examples debian/python-epsilon/usr/share/python-epsilon
	find debian/python-epsilon/usr/share/python-epsilon -name '.svn' | xargs rm -rf
	chmod -R 755 debian/python-epsilon/usr/share/python-epsilon


