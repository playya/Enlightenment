        } 											\
   }     
   
#define button(_name, text, icon) 			\
	group { 								\
		name: _name; 						\
		parts {								\
		part {  							\
        	name: _name;					\
	    	type: EXTERNAL;					\
	    	repeat_events: 0;				\
	    	source: "elm/button"; 			\
	    	description {					\
	       		params {					\
	          		string: "label" text; 	\
	          		string: "icon" icon; 	\
	       		}							\
	    	}								\
	    }									\
	    }									\
    }
    
 
 