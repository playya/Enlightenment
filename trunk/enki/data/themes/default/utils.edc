
#define transfers_signal(_pre, _signal, _source, _container, _content) 		\
	program {															\
		name: _pre""_signal;													\
		signal: _signal;												\
		source: _source;												\
		action: SIGNAL_EMIT _container"["_content"]:"_signal _source;	\
	}


#define list(_name) 								\
group { 											\
		name: _name; 								\
		parts {										\
		part {										\
            name: _name; 							\
            type: EXTERNAL;							\
            source: "elm/list";						\
            description {							\
                state : "default" 0.0;				\
            }										\
        } 											\
        } 											\
   }
   
