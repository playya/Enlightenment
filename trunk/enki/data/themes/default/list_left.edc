
group {
	name: "list_left";
	
	
	parts {
		part {
			name: "object.menu.lvl1";
			type: EXTERNAL;
			source: "elm/toolbar";
			description {
				state: "default" 0.0;
				rel2.relative: 1.0 0.0;
				align: 0.5 0.0;
				fixed: 1 1;
			}
		}
		
		part {
			name: "object.menu.lvl2";
			type: EXTERNAL;
			source: "elm/toolbar";
			description {
				state: "default" 0.0;
				rel1.to_y: "object.menu.lvl1";
				rel1.relative: 0.0 1.0;	
				rel2.to_y: "object.menu.lvl1";
				rel2.relative: 1.0 1.0;
				align: 0.5 0.0;
				fixed: 1 1;
			}
		}
		
		part {
			name: "collections_clipper";
			type: RECT;
			description {
				state: "default" 0.0;
				color: 255 255 255 255;
			}
			description {
				state: "albums" 0.0;
				inherit: "default" 0.0;
				color: 255 255 255 0;
			}
			description {
				state: "collections" 0.0;
				inherit: "default" 0.0;
			}
			description {
				state: "tags" 0.0;
				inherit: "default" 0.0;
				color: 255 255 255 0;
			}
			description {
				state: "albums_done" 0.0;
				inherit: "default" 0.0;
				visible: 0;
				color: 255 255 255 0;
			}
			description {
				state: "collections_done" 0.0;
				inherit: "default" 0.0;
			}
			description {
				state: "tags_done" 0.0;
				inherit: "default" 0.0;
				visible: 0;
				color: 255 255 255 0;
			}
		}
		part {
			name: "object.list.collections";
			type: EXTERNAL;
			source: "elm/genlist";
			clip_to: "collections_clipper";
			description {
				state: "default" 0.0;
				rel1.to_y: "object.menu.lvl2";
				rel1.relative: 0.0 1.0;
				params {
					string: "horizontal mode" "scroll";
				}
			}
		}
		
		part {
			name: "tags_clipper";
			type: RECT;
			description {
				state: "default" 0.0;
				color: 255 255 255 255;
			}
			description {
				state: "albums" 0.0;
				inherit: "default" 0.0;
				color: 255 255 255 0;
			}
			description {
				state: "collections" 0.0;
				inherit: "default" 0.0;
				color: 255 255 255 0;
			}
			description {
				state: "tags" 0.0;
				inherit: "default" 0.0;
			}
			description {
				state: "albums_done" 0.0;
				inherit: "default" 0.0;
				visible: 0;
				color: 255 255 255 0;
			}
			description {
				state: "collections_done" 0.0;
				inherit: "default" 0.0;
				visible: 0;
				color: 255 255 255 0;
			}
			description {
				state: "tags_done" 0.0;
				inherit: "default" 0.0;
			}
		}
		part {
			name: "object.list.tags";
			type: EXTERNAL;
			source: "elm/genlist";
			clip_to: "tags_clipper";
			description {
				state: "default" 0.0;
				rel1.to_y: "object.menu.lvl2";
				rel1.relative: 0.0 1.0;
				params {
					string: "horizontal mode" "scroll";
				}
			}
		}
		
		part {
			name: "albums_clipper";
			type: RECT;
			description {
				state: "default" 0.0;
				color: 255 255 255 255;
			}
			description {
				state: "albums" 0.0;
				inherit: "default" 0.0;
			}
			description {
				state: "collections" 0.0;
				inherit: "default" 0.0;
				color: 255 255 255 0;
			}
			description {
				state: "tags" 0.0;
				inherit: "default" 0.0;
				color: 255 255 255 0;
			}
			description {
				state: "albums_done" 0.0;
				inherit: "default" 0.0;
			}
			description {
				state: "collections_done" 0.0;
				inherit: "default" 0.0;
				visible: 0;
				color: 255 255 255 0;
			}
			description {
				state: "tags_done" 0.0;
				inherit: "default" 0.0;
				visible: 0;
				color: 255 255 255 0;
			}
		}
		part {
			name: "object.list.albums";
			type: EXTERNAL;
			source: "elm/genlist";
			clip_to: "albums_clipper";
			description {
				state: "default" 0.0;
				rel1.to_y: "object.menu.lvl2";
				rel1.relative: 0.0 1.0;
				params {
					string: "horizontal mode" "scroll";
				}
			}
		}
	}
	
	programs {
		program {
			name: "show";
			signal: "show";
			after: "show_albums";
		}
		
		program {
			name: "show_albums";
			signal: "albums,show";
			action: STATE_SET "albums" 0.0;
			target: "albums_clipper";
			target: "collections_clipper";
			target: "tags_clipper";
			transition: ACCELERATE  0.5; 
			after: "show_albums_done";
		}
		program {
			name: "show_albums_done";
			action: STATE_SET "albums_done" 0.0;
			target: "albums_clipper";
			target: "collections_clipper";
			target: "tags_clipper";
		}
		program {
			name: "show_collections";
			signal: "collections,show";
			action: STATE_SET "collections" 0.0;
			target: "albums_clipper";
			target: "collections_clipper";
			target: "tags_clipper";
			transition: ACCELERATE  0.5;
			after: "show_collections_done";
		}
		program {
			name: "show_collections_done";
			action: STATE_SET "collections_done" 0.0;
			target: "albums_clipper";
			target: "collections_clipper";
			target: "tags_clipper";
		}
		program {
			name: "show_tags";
			signal: "tags,show";
			action: STATE_SET "tags" 0.0;
			target: "albums_clipper";
			target: "collections_clipper";
			target: "tags_clipper";
			transition: ACCELERATE 0.5;
			after: "show_tags_done";
		}
		program {
			name: "show_tags_done";
			action: STATE_SET "tags_done" 0.0;
			target: "albums_clipper";
			target: "collections_clipper";
			target: "tags_clipper";
		}
	}

}