#############################################################
# this is a sample rollover template file                   #
# - lines beginning with # are comments, and lines          #
#   beginning with : are rollover configuration stuff       #
#############################################################

# output html file (defaults to out.html)
# you can also use | for stdout
#:output, |
:output,       sidebar.shtml

# quiet output, don't print "Generating ..." to stderr
#:quiet, yes

# output prefix (defaults to "<!-- Generated by rollover.pl with gozer -->\n")
#:prefix, "<BLINK>Hi there</BLINK><BR>\n"

# image delimiter (defaults to "<BR>")
# uncomment this if you want a horizonal instead of vertical layout
:delimiter,  | 

# output suffix (defaults to "")
#:suffix, "</TD></TR></TABLE>\n"

# image format (defaults to jpg)
:image_format, png

# image border (defaults to 0)
#:border, 2

# use ImageMagik to do postprocessing.  you only need this 
# if you need gif images -- Imlib2 has a broken GIF export
:convert_to, gif

# purge intermediate files after :convert_to conversion.  Obviously
# only makes sense when used in conjunction with :convert_to (defaults
# to "", or off)
#:convert_purge, yes

# you can also include other files with the :include directive
# the following sections could be replaced by these two lines:
#n ote that the template files are included AFTER the current
# file.  they are not parsed inline
#:include, normal.tmpl
#:include, hilited.tmpl


################## 
# normal options #
##################

# normal image prefix (deafults to "images/")
#:image_prefix, images/

# don't create dir for normal image prefix? (defaults to "", or false)
#:prefix_dontcreate, true

# normal image suffix (deafults to "")
#:image_suffix, -normal

# background color for normal text (defaults to transparent)
#:bg_color, #FF00FF

# background image for normal text 
#:bg_image, poop.jpeg

# font type for normal text
:font,         20thcent/14

# font style for normal text (see the Gom FONTSTYLE documentation for
# information on creating font styles)
#:style,         OUTLINE

# foreground color for normal text
:fg_color,     #A5A5A5

# additional gozer flags for normal text
#:gozer_flags, -bg-scale 


###################
# hilited options #
###################

# hilited image prefix (deafults to "images/")
#:ro_image_prefix, images/

# don't create dir for hilited image prefix? (defaults to "", or false)
#:ro_prefix_dontcreate, true

# hilited image suffix (deafults to "")
#:ro_image_suffix, -hilited

# background color for hilited text (defaults to transparent)
#:ro_bg_color, #FF00FF

# background image for hilited text 
#:ro_bg_image, poop.jpeg

# font type for hilited text
:ro_font,   20thcent/14

# font style for hilited text (see the Gom FONTSTYLE documentation for
# information on creating font styles)
#:ro_style,         OUTLINE


# foreground color for hilited text
:ro_fg_color,  #B5B5B5

# additional gozer flags for hilited text
#:ro_gozer_flags, -bg-scale 


