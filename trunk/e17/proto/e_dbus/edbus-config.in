#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no

usage="\
Usage: edbus-config [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--libs] [--cflags]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo @PACKAGE_VERSION@
      ;;
    --cflags)
      if test @prefix@/include != /usr/include ; then
        includes="-I@prefix@/include"
      fi
      echo $includes @EVAS_CFLAGS@ @ECORE_CFLAGS@ -I$prefix/include
      ;;
    --libs)
      libdirs=-L@libdir@
      echo $libdirs -ledbus @ECORE_LIBS@ @EVAS_LIBS@ | sed 's/ /\n/g' | sort | uniq | sed 'H;$!d;${x;s/\n/ /g;s/^ //}'
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done

exit 0
