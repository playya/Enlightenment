	STOCK_ICON("48x48/categories/preferences-system.png", "icons/main/behavior", 48)
	STOCK_ICON("48x48/apps/preferences-system-session.png", "icons/main/sessions", 48)
	STOCK_ICON("48x48/devices/video-display.png", "icons/main/xsettings", 48)
