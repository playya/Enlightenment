  name, "theme";
  
  parts {
    part {
      name, "theme.label";
      type, TEXT;
      description {
        state, "default" 0.0;
        color, 0 0 0 128;
        text {
          text, "Theme Name";
          font, "Vera";
          size, "8";
        }
      }
      description {
        state, "over" 0.0;
        color, 0 0 0 255;
        text {
          text, "Theme Name";
          font, "Vera";
          size, "8";
        }
      }
    }
    part {
      name, "grabber";
      type, RECT;
      description {
        state, "default" 0.0;
        color, 0 0 0 0;
      }
    }
  }
  programs {
    program {
      name, "over";
      signal, "mouse,in";
      source, "grabber";
      action, STATE_SET "over" 0.0;
      transition, DECELERATE 0.25;
      target, "theme.label";
    }
    program {
      name, "out";
      signal, "mouse,out";
      source, "grabber";
      action, STATE_SET "default" 0.0;
      transition, DECELERATE 0.25;
      target, "theme.label";
    }
    program {
      name, "load";
      signal, "mouse,down,1";
      source, "grabber";
      action, SIGNAL_EMIT "elicit,theme,load" "";
    }
  }
