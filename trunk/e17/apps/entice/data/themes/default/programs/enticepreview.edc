		target, "entice.preview.clip";
	    }
	    program
	    {
		name, "preview_shown";
		signal, "show";
		source, "";
		action, DRAG_VAL_SET 0.0 0.0;
		target, "entice.preview";
	    }
	    program
	    {
		name, "preview_shown";
		signal, "show";
		source, "";
		script {
		    set_int(preview_state, 0);
		}
	    }
	    program
	    {
		name, 	"JustImage";
		signal, "mouse,in";
		source, "entice.image";
		action, STATE_SET "default" 0.0;
		transition, DECELERATE 0.5;
		target, "entice.preview.clip";
