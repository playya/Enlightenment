	    program {
		name, "show_user_menu";
		signal, "mouse,clicked,1";
		source, "session_mouse_area";
		action, SIGNAL_EMIT "user,list,in" "";
	    }
	    program {
		name, "hide_user_menu";
		signal, "mouse,clicked,3";
		source, "bgimage";
		action, SIGNAL_EMIT "user,list,out" "";
	    }
	    program {
		name, "mouse_double_clicked_user_list_border";
		signal, "mouse,down,1,double";
		source, "user_list_border";
		action, SIGNAL_EMIT "user,list,out" "";
	    }
	    program {
		name, "user_selected_hide_list";
		signal, "entrance,users,selected";
		source, "";
		action, SIGNAL_EMIT "user,list,out" "";
	    }

	    /* ani out */
	    program {
		name, "slide_out_user_list";
		signal, "user,list,out";
		source, "";
		script {
		    if(get_int(user_list_visible) == 1)
		    {
			set_int(user_list_visible, 0);
			anim(1.0, "animate_user_list_out", 5);
			run_program(PROGRAM:"fade_out_user_list");
		    }
		    else
		    {
			emit("FOO", "BAR");
		    }
		}
	    }
	    program {
		name, "fade_out_user_list";
		signal, "";
		source, "";
		action, STATE_SET "default" 0.0;
		target, "user_list_clip";
		target, "user_list_confine";
		transition, LINEAR 0.95;
	    }
	    /* ani in */
	    program {
		name, "slide_in_user_list";
		signal, "user,list,in";
		source, "";
		script {
		    if(get_int(user_list_visible) == 0)
		    {
			set_int(user_list_visible, 1);
			anim(1.0, "animate_user_list_in", 5);
			run_program(PROGRAM:"fade_in_user_list");
		    }
		    else
		    {
			emit("BAR", "QUIT");
		    }
		}
	    }
	    program {
		name, "fade_in_user_list";
		signal, "";
		source, "";
		action, STATE_SET "visible" 0.0;
		target, "user_list_clip";
		target, "user_list_confine";
		transition, LINEAR 0.95;
	    }
