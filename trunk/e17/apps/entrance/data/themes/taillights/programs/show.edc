	target, "user_list_border";
    }
    program {
	    name, "session_list_show";
	    signal, "show";
	    source, "";
	    action, DRAG_VAL_SET 1.0 1.0;
	    target, "session_list_border";
    }
    program {
	    name, "animate_e_logo";
	    source, "";
	    signal, "show";
	    action, STATE_SET "default" 0.0;
	    transition, LINEAR 6.5;
	    target, "animated_e_logo";
	    after, "animate_e_logo";
    }
