	    set_int(login_shaking, 0);
	    set_int(user_list_visible, 0);
	    set_int(session_list_visible, 0);
	    set_int(login_area_shaking_direction, 0);
	    set_float(login_area_align_x, 0.5);
	}
    }
    program {
	    name, "LoginAreaShow";
	    signal, "show";
	    source, "";
	    action, STATE_SET "visible" 0.0;
	    target, "login_area_clip";
	    transition, SINUSOIDAL 0.5;
    }
    program {
	    name, "LoginAreaMoveShow";
	    signal, "show";
	    source, "";
	    action, DRAG_VAL_SET 0.5 0.5;
	    target, "login_border";
    }
    program {
	name, "user_list_show";
	signal, "show";
	source, "";
