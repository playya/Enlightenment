#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no

usage="\
Usage: ewl-config [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--libs] [--cflags] [--test-lib-dir] [--test-src-dir] [--app-config-dir]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo @VERSION@
      ;;
    --cflags)
      if test @prefix@/include != /usr/include ; then
        includes="-I@prefix@/include"
      fi
      echo $includes @EMOTION_CFLAGS@ @ECORE_CFLAGS@ @EVAS_CFLAGS@ @EPSILON_CFLAGS@ -I$prefix/include/ewl
      ;;
    --libs)
      libdirs=-L@libdir@
      echo $libdirs -lewl @EMOTION_LIBS@ @EDJE_LIBS@ @ECORE_LIBS@ @EVAS_LIBS@ @EPSILON_LIBS@ -lm
      ;;
    --test-lib-dir)
      echo @libdir@/ewl/tests
      ;;
    --test-src-dir)
      echo @prefix@/share/ewl/examples
      ;;
    --app-config-dir)
      echo @sysconfdir@/ewl/config/apps
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done

exit 0
