                    relative, 0.0 0.0;
                    offset, 0 0;
                }
                rel2 {
                     relative, 1.0 1.0;
                     offset, -1 -1;
                }
		image {
		    normal, "e17_tranny.png";
		}
                color, 220 224 220 255;
            }
	}
    }
}

