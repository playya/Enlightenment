group {
    name, "cell";
    data {
        item, "inset/left" "1";
        item, "inset/right" "1";
        item, "inset/top" "1";
        item, "inset/bottom" "1";
        item, "pad/left" "0";
        item, "pad/right" "0";
        item, "pad/top" "0";
        item, "pad/bottom" "0";
    }

    parts {
        part {
            name, "base"; 
            mouse_events,  0; 
            type, RECT; 
            description { 
                state, "default" 0.0; 
                rel1 { 
                    relative, 0.0 0.0; 
                    offset, 0 0; 
                } 
                rel2 { 
                    relative, 1.0 1.0; 
                    offset, -1 -1; 
                } 
                color, 220 220 220 255;
            } 
            description {
                state, "clicked" 0.0; 
                rel1 { 
                    relative, 0.0 0.0; 
                    offset, 0 0; 
                } 
                rel2 { 
                    relative, 1.0 1.0; 
                    offset, -1 -1; 
                } 
                color, 240 240 240 255; 
            } 
            description {
                state, "over" 0.0;
                rel1 {
                    relative, 0.0 0.0;
                    offset, 0 0;
                }
                rel2 {
                    relative, 1.0 1.0;
                    offset, -1 -1;
                }
                color, 190 190 190 255;
            }
        }
    }  

    programs {
        program {
            name, "clicked"; 
            signal, "mouse,down,*"; 
            source, "*"; 
            action, STATE_SET "clicked" 0.0; 
            transition, LINEAR, 0.0; 
            target, "base"; 
        } 
        program { 
            name, "unclick"; 
            signal, "mouse,up,*"; 
            source, "*"; 
            action, STATE_SET "over" 0.0; 
            transition, LINEAR, 0.0; 
            target, "base"; 
        } 
        program {
            name, "over";
            signal, "mouse,in";
            source, "*";
            action, STATE_SET "over" 0.0;
            transition, LINEAR, 0.0;
            target, "base";
        }
        program {
            name, "out";
            signal, "mouse,out";
            source, "*";
            action, STATE_SET "default" 0.0;
            transition, LINEAR, 0.0;
            target, "base";
        }
    }
}



