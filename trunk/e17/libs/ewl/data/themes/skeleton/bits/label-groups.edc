   group {
      name, "label";
      data {
          item, "inset/left" "0";
          item, "inset/right" "0";
          item, "inset/top" "0";
          item, "inset/bottom" "0";
          item, "pad/left" "0";
          item, "pad/right" "0";
          item, "pad/top" "0";
          item, "pad/bottom" "0";
      }
      parts {
          part {
              name, "text";
              type, TEXT;
              effect, SOFT_SHADOW;

              description {
                  state, "default" 0.0;
                  align, 0.5 0.0;
                  rel1 {
                      relative, 0.0 0.0;
                      offset, 0 0;
                  }
                  rel2 {
                      relative, 1.0 1.0;
                      offset, -1 -1;
                  }
                  color, 255 255 255 255;
                  color3, 0 0 0 32;
                  text {
                      text, "text";
                      font, "Vera";
                      size, 10;
                      min, 1 1;
                      align, 0.5 0.0;
                  }
              }

              description {
                  state, "highlight" 0.0;
                  align, 0.5 0.0;
                  rel1 {
                      relative, 0.0 0.0;
                      offset, 0 0;
                  }
                  rel2 {
                      relative, 1.0 1.0;
                      offset, -1 -1;
                  }
                  color, 0 0 0 255;
                  color3, 255 255 255 32;
                  text {
                      text, "text";
                      font, "Vera";
                      size, 10;
                      min, 1 1;
                      align, 0.5 0.0;
                  }
              }

          }
      }

      programs {
	  program {
	      name, "normal";
	      signal, "mouse,out";
	      source, "*";
	      action, STATE_SET "default" 0.0;
	      transition, LINEAR 0.0;
	      target, "text";
	  }
          program {
	      name, "highlight";
	      signal, "mouse,in";
	      source, "*";
	      action, STATE_SET "highlight" 0.0;
	      transition, LINEAR 0.0;
	      target, "text";
	  }
      }
   }
