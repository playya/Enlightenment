group {
   name: "etk/colorpicker/picker";
   min: 205 180;
   parts {
      part {
         name: "square_cp_border";
         description {
            state: "default" 0.0;
            rel1 {
               relative: 0 0;
               offset: 0 0;
            }
            rel2 {
               relative: 1.0 1.0;
               offset: -37 -1;
            }
            image {
               normal: "colorpicker_square.png";
               border: 11 4 11 11;
               middle: 0;
            }
            fill {
               smooth: 0;
            }
         }
      }
      part {
         name: "vertical_cp_border";
         description {
            state: "default" 0.0;
            rel1 {
               relative: 1.0 0.0;
               offset: -36 0;
            }
            rel2 {
               relative: 1.0 1.0;
               offset: -1 -1;
            }
            image {
               normal: "colorpicker_vertical.png";
               border: 5 13 11 11;
               middle: 0;
            }
            fill {
               smooth: 0;
            }
         }
      }
      part {
         name: "square_picker";
         type: SWALLOW;
         description {
            state: "default" 0.0;
            rel1 {
               relative: 0.0 0.0;
               offset: 11 11;
            }
            rel2 {
               relative: 1.0 1.0;
               offset: -41 -11;
            }
         }
      }
      part {
         name: "vertical_picker";
         type: SWALLOW;
         description {
            state: "default" 0.0;
            rel1 {
               relative: 1.0 0.0;
               offset: -31 11;
            }
            rel2 {
               relative: 1.0 1.0;
               offset: -14 -11;
            }
         }
      }
   }
}

group {
   name: "etk/colorpicker/hslider";
   min: 140 24;
   parts {
      part {
         name: "slider_image";
         type: SWALLOW;
         description {
            state: "default" 0.0;
            rel1 {
               relative: 0.0 0.0;
               offset: 2 1;
               to: "trough";
            }
            rel2 {
               relative: 1.0 1.0;
               offset: -2 -2;
               to: "trough";
            }
         }
      }
      part {
         name: "trough";
         description {
            state: "default" 0.0;
            rel1 {
               relative: 0.0 0.5;
               offset: 4 -6;
            }
            rel2 {
               relative: 1.0 0.5;
               offset: -5 5;
            }
            image {
               normal: "colorpicker_slider_trough.png";
               border: 4 4 4 4;
            }
            fill {
               smooth: 0;
            }
         }
      }
      FOCUS_GLOW(0.0, 0.0, -4, -4, "trough", 1.0, 1.0, 3, 3, "trough")
      part {
         name: "confine";
         type: RECT;
         description {
            state: "default" 0.0;
            visible: 0;
            rel1 {
               relative: 0.0 0.0;
               offset: -1 12;
               to: "trough";
            }
            rel2 {
               relative: 1.0 0.0;
               offset: 1 12;
               to: "trough";
            }
         }
      }
      part {
         name: "etk.dragable.slider";
         dragable {
            confine: "confine";
            x: 1 1 1;
            y: 0 0 0;
         }
         description {
            state: "default" 0.0;
            min: 9 15;
            max: 9 15;
            image {
               normal: "colorpicker_slider_drag.png";
            }
         }
      }
   }
   programs {
      program {
         name: "colorpicker_hslider_focus";
         signal: "etk,state,focused";
         source: "etk";
         FOCUS_GLOW_ACTION
      }
      program {
         name: "colorpicker_hslider_unfocus";
         signal: "etk,state,unfocused";
         source: "etk";
         UNFOCUS_GLOW_ACTION
      }
   }
}

group {
   name: "etk/colorpicker/color_preview";
   min: 40 18;
   parts {
      part {
         name: "preview_rect";
         type: SWALLOW;
         description {
            state: "default" 0.0;
            rel1 {
               relative: 0.0 0.0;
               offset: 2 1;
               to: "border";
            }
            rel2 {
               relative: 1.0 1.0;
               offset: -2 -2;
               to: "border";
            }
         }
      }
      part {
         name: "border";
         description {
            state: "default" 0.0;
            rel1 {
               relative: 0.0 0.0;
               offset: 0 0;
            }
            rel2 {
               relative: 1.0 1.0;
               offset: -1 -1;
            }
            image {
               normal: "colorpicker_slider_trough.png";
               border: 4 4 4 4;
            }
            fill {
               smooth: 0;
            }
         }
      }
   }
}
