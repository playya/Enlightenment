/**************************
 *
 * Macros for the glint effect
 *
 *************************/

#define GLINT_PART(rect_part) \
   part { \
      name: "glint_clip"; \
      type: RECT; \
      mouse_events: 0; \
      description { \
         state: "default" 0.0; \
         color: 255 255 255 255; \
         fixed: 1 1; \
         rel1 { \
            offset: 3 3; \
            to: rect_part; \
         } \
         rel2 { \
            offset: -4 -4; \
            to: rect_part; \
         } \
      } \
   } \
   part { \
      name: "glint1"; \
      mouse_events: 0; \
      description { \
         state: "default" 0.0; \
         visible: 0; \
         color: 255 255 255 0; \
         align: 0.0 0.0; \
         max: 34 13; \
         fixed: 1 1; \
         rel1 { \
            relative: 0.0 0.0; \
            offset: 2 2; \
            to: rect_part; \
         } \
         rel2 { \
            relative: 1.0 1.0; \
            offset: -3 -3; \
            to: rect_part; \
         } \
         image { \
            normal: "win_glint1.png"; \
            border: 5 0 5 0; \
         } \
         fill { \
            smooth: 0; \
         } \
      } \
      description { \
         state: "active" 0.0; \
         inherit: "default" 0.0; \
         visible: 1; \
         color: 255 255 255 255; \
      } \
   } \
   part { \
      name: "glint2"; \
      mouse_events: 0; \
      clip_to: "glint_clip"; \
      description { \
         state: "default" 0.0; \
         visible: 0; \
         color: 255 255 255 0; \
         align: 1.0 0.5; \
         max: 0 0; \
         fixed: 1 1; \
         rel1 { \
            relative: 0.0 0.0; \
            offset: 3 3; \
            to: rect_part; \
         } \
         rel2 { \
            relative: 0.0 1.0; \
            offset: 3 -4; \
            to: rect_part; \
         } \
         image { \
            normal: "win_glint2.png"; \
            border: 0 0 5 5; \
         } \
      } \
      description { \
         state: "active" 0.0; \
         inherit: "default" 0.0; \
         visible: 1; \
         color: 255 255 255 255; \
         max: 169 9999; \
         min: 169 8; \
         align: 0.5 0.5; \
         rel1 { \
            relative: 0.0 0.0; \
            offset: 3 3; \
         } \
         rel2 { \
            relative: 0.0 1.0; \
            offset: 3 -4; \
         } \
      } \
      description { \
         state: "active2" 0.0; \
         inherit: "default" 0.0; \
         visible: 1; \
         color: 255 255 255 128; \
         max: 169 9999; \
         min: 169 8; \
         align: 0.5 0.5; \
         rel1 { \
            relative: 1.0 0.0; \
            offset: -4 3; \
         } \
         rel2 { \
            relative: 1.0 1.0; \
            offset: -4 -4; \
         } \
      } \
      description { \
         state: "active3" 0.0; \
         inherit: "default" 0.0; \
         visible: 0; \
         color: 255 255 255 0; \
         max: 169 9999; \
         min: 169 8; \
         align: 0.0 0.5; \
         rel1 { \
            relative: 1.0 0.0; \
            offset: -4 3; \
         } \
         rel2 { \
            relative: 1.0 1.0; \
            offset: -4 -4; \
         } \
      } \
   } \
   part { \
      name: "glint3"; \
      mouse_events: 0; \
      description { \
         state: "default" 0.0; \
         visible: 0; \
         color: 255 255 255 0; \
         align: 1.0 1.0; \
         max: 34 13; \
         fixed: 1 1; \
         rel1 { \
            relative: 0.0 0.0; \
            offset: 2 2; \
            to: rect_part; \
         } \
         rel2 { \
            relative: 1.0 1.0; \
            offset: -3 -3; \
            to: rect_part; \
         } \
         image { \
            normal: "win_glint3.png"; \
            border: 0 5 0 5; \
         } \
         fill { \
            smooth: 0; \
         } \
      } \
      description { \
         state: "active" 0.0; \
         inherit: "default" 0.0; \
         visible: 1; \
         color: 255 255 255 255; \
      } \
   }

#define GLINT_PROGRAM \
   program { \
      name: "glint_go_active"; \
      action: STATE_SET "active" 0.0; \
      target: "glint1"; \
      target: "glint2"; \
      transition: LINEAR 0.05; \
      after: "glint_go_active2"; \
      after: "glint_go_active2b"; \
   } \
   program { \
      name: "glint_go_active2"; \
      action: STATE_SET "active2" 0.0; \
      target: "glint2"; \
      transition: LINEAR 0.2; \
      after: "glint_go_active3"; \
      after: "glint_go_active3b"; \
   } \
   program { \
      name: "glint_go_active2b"; \
      action: STATE_SET "active" 0.0; \
      target: "glint3"; \
      transition: LINEAR 0.2; \
   } \
   program { \
      name: "glint_go_active3"; \
      action: STATE_SET "active3" 0.0; \
      target: "glint2"; \
      transition: LINEAR 0.05; \
   } \
   program { \
      name: "glint_go_active3b"; \
      action: STATE_SET "default" 0.0; \
      target: "glint3"; \
      transition: LINEAR 0.1; \
      after: "glint_go_active4"; \
   } \
   program { \
      name: "glint_go_active4"; \
      action: STATE_SET "default" 0.0; \
      target: "glint1"; \
      target: "glint2"; \
      target: "glint3"; \
   }

#define GLINT_ACTION \
   after: "glint_go_active";


/**************************
 *
 * Macros for the border's small buttons
 *
 *************************/

#define WIN_BUTTON(part_name, rx, ry, ox, oy, detail_image, event_part) \
   part { \
      name: part_name"_shadow2"; \
      description { \
         state: "default" 0.0; \
         rel1 { \
            relative: rx ry; \
            offset: ox oy; \
         } \
         rel2 { \
            relative: rx ry; \
            offset: (ox + 23) (oy + 23); \
         } \
         image { \
            normal: "win_button_shadow2.png"; \
         } \
         fill { \
            smooth: 0; \
         } \
      } \
      description { \
         state: "down" 0.0; \
         inherit: "default" 0.0; \
         visible: 0; \
         color: 255 255 255 0; \
      } \
   } \
   part { \
      name: part_name"_shadow1"; \
      description { \
         state: "default" 0.0; \
         rel1 { \
            relative: rx ry; \
            offset: ox oy; \
         } \
         rel2 { \
            relative: rx ry; \
            offset: (ox + 23) (oy + 23); \
         } \
         image { \
            normal: "win_button_shadow1.png"; \
         } \
         fill { \
            smooth: 0; \
         } \
      } \
      description { \
         state: "down" 0.0; \
         inherit: "default" 0.0; \
         visible: 0; \
         color: 255 255 255 0; \
      } \
   } \
   part { \
      name: part_name"_button"; \
      description { \
         state: "default" 0.0; \
         rel1 { \
            relative: rx ry; \
            offset: ox oy; \
         } \
         rel2 { \
            relative: rx ry; \
            offset: (ox + 23) (oy + 23); \
         } \
         image { \
            normal: "win_button.png"; \
         } \
         fill { \
            smooth: 0; \
         } \
      } \
   } \
   part { \
      name: part_name"_detail"; \
      description { \
         state: "default" 0.0; \
         rel1 { \
            relative: rx ry; \
            offset: (ox + 4) (oy + 4); \
         } \
         rel2 { \
            relative: rx ry; \
            offset: (ox + 19) (oy + 19); \
         } \
         image { \
            normal: detail_image; \
         } \
         fill { \
            smooth: 0; \
         } \
      } \
   } \
   part { \
      name: event_part; \
      type: RECT; \
      description { \
         state: "default" 0.0; \
         color: 255 255 255 0; \
         rel1 { \
            relative: rx ry; \
            offset: ox oy; \
         } \
         rel2 { \
            relative: rx ry; \
            offset: (ox + 23) (oy + 23); \
         } \
      } \
   }

#define WIN_BUTTON_PROGRAM(part_name, event_part) \
   program { \
      name: part_name"_down"; \
      signal: "mouse,down,1"; \
      source: event_part; \
      action: STATE_SET "default" 0.0; \
      target: part_name"_shadow1"; \
      target: part_name"_shadow2"; \
      after: part_name"_down2"; \
   } \
   program { \
      name: part_name"_down2"; \
      action: STATE_SET "down" 0.0; \
      target: part_name"_shadow2"; \
      transition: LINEAR 0.05; \
      after: part_name"_down3"; \
   } \
   program { \
      name: part_name"_down3"; \
      action: STATE_SET "down" 0.0; \
      target: part_name"_shadow1"; \
      transition: LINEAR 0.05; \
   } \
   \
   program { \
      name: part_name"_up"; \
      signal: "mouse,up,1"; \
      source: event_part; \
      action: STATE_SET "down" 0.0; \
      target: part_name"_shadow1"; \
      target: part_name"_shadow2"; \
      after: part_name"_up2"; \
   } \
   program { \
      name: part_name"_up2"; \
      action: STATE_SET "default" 0.0; \
      target: part_name"_shadow2"; \
      transition: LINEAR 0.1; \
      after: part_name"_up3"; \
   } \
   program { \
      name: part_name"_up3"; \
      action: STATE_SET "default" 0.0; \
      target: part_name"_shadow1"; \
      transition: LINEAR 0.1; \
   }
