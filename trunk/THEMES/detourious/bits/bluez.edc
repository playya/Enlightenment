group { name: "e/modules/bluez/main";
   images {
      image: "images/bluetooth.png" COMP;
      image: "images/bluetooth_error.png" COMP;
      image: "images/bluetooth_visible.png" COMP;
   }
   parts {
      part { name: "eventarea";
         type: RECT;
         mouse_events: 1;
         description { state: "default" 0.0;
            color: 0 0 0 0;
         }
      }
      part { name: "bluetooth";
         type: IMAGE;
         mouse_events: 0;
         description { state: "default" 0.0;
            min: 16 28;
            max: 16 28;
            image.normal: "images/bluetooth.png";
            color_class: "shelf_secondary_icon";
         }
         description { state: "powered" 0.0;
            inherit: "default" 0.0;
         }
         description { state: "hidden" 0.0;
            inherit: "default" 0.0;
         }
         description { state: "no_service" 0.0;
            inherit: "default" 0.0;
            image.normal: "images/bluetooth_error.png";
         }
      }
      part { name: "visible";
         type: IMAGE;
         mouse_events: 0;
         description { state: "default" 0.0;
            min: 33 19;
            max: 33 19;
            image.normal: "images/bluetooth_visible.png";
            visible: 0;
            color_class: "shelf_secondary_icon";
         }
         description { state: "powered" 0.0;
            inherit: "default" 0.0;
            visible: 1;
         }
         description { state: "hidden" 0.0;
            inherit: "default" 0.0;
            visible: 0;
         }
         description { state: "no_service" 0.0;
            inherit: "default" 0.0;
            visible: 0;
         }
      }
      programs {
         program {
            signal: "e,changed,service,none";
            source: "e";
            action: STATE_SET "no_service" 0.0;
            target: "bluetooth";
            target: "visible";
         }
         program {
            signal: "e,changed,off";
            source: "e";
            action: STATE_SET "default" 0.0;
            target: "bluetooth";
            target: "visible";
         }
         program {
            signal: "e,changed,powered";
            source: "e";
            action: STATE_SET "powered" 0.0;
            target: "bluetooth";
            target: "visible";
         }
         program {
            signal: "e,changed,hidden";
            source: "e";
            action: STATE_SET "hidden" 0.0;
            target: "bluetooth";
            target: "visible";
         }
      }
   }
}
group { name: "e/modules/bluez/tip";
   min: 250 40;
   parts {
      part { name: "e.text.name";
         type: TEXT;
         effect: SHADOW;
         mouse_events: 0;
         description { state: "default" 0.0;
            TEXT_COLOR
            align: 0.0 0.5;
			fixed: 1 1;
            rel1 {
               relative: 0.0 0.0;
               offset: 10 0;
            }
            rel2 {
               relative: 0.0 1.0;
               offset: 0 -1;
            }
            text {
               font: FONT_BOLD;
               size: 12;
               min: 1 1;
               align: 0.0 0.5;
            }
         }
      }
      part { name: "e.text.status";
         type: TEXT;
         mouse_events: 0;
         description { state: "default" 0.0;
            TEXT_COLOR;
            rel1 {
               to: "e.text.name";
               relative: 1.0 0.0;
               offset: 10 0;
            }
            rel2 {
               to_y: "e.text.name";
               relative: 1.0 1.0;
               offset: 10 -1;
            }
            text {
               font: FONT;
               size: 10;
               align: 0.0 0.5;
               min: 1 1;
            }
         }
      }
   }
}
