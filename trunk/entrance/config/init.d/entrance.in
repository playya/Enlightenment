#! /bin/sh
### BEGIN INIT INFO
# Provides:          entrance
# Should-Start:      console-screen kbd acpid dbus hal network-manager
# Required-Start:    $local_fs $remote_fs x11-common
# Required-Stop:     $local_fs $remote_fs
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Entrance Login Manager
# Description:       Debian init script for the Entrance Login Manager
### END INIT INFO
#
# gdm init script modified for entrance
# Author: quaker <quaker66@gmail.com>
# GDM initscript author: Ryan Murray <rmurray@debian.org>
#
set -e

PATH=/sbin:/bin:@prefix@/sbin:@prefix@/bin:@prefix@/libexec:@prefix@/libexec/entrance
DAEMON=@prefix@/sbin/entranced

test -x $DAEMON || exit 0

if [ -r /etc/default/locale ]; then
  . /etc/default/locale
  export LANG LANGUAGE
fi

. /lib/lsb/init-functions

# To start entranced even if it is not the default display manager, change
# HEED_DEFAULT_DISPLAY_MANAGER to "false."
HEED_DEFAULT_DISPLAY_MANAGER=true
DEFAULT_DISPLAY_MANAGER_FILE=/etc/X11/default-display-manager

case "$1" in
  start)
        CONFIGURED_DAEMON=$(basename "$(cat $DEFAULT_DISPLAY_MANAGER_FILE 2> /dev/null)")
        if grep -wqs text /proc/cmdline; then
            log_warning_msg "Not starting Entrance Login Manager (entranced); found 'text' in kernel commandline."
        elif [ -e "$DEFAULT_DISPLAY_MANAGER_FILE" ] && \
           [ "$HEED_DEFAULT_DISPLAY_MANAGER" = "true" ] && \
           [ "$CONFIGURED_DAEMON" != entranced ] ; then
                log_action_msg "Not starting Entrance Login Manager; it is not the default display manager"
        else
                log_daemon_msg "Starting Entrance Login Manager" "entranced"
		set +e
		if pam_getenv -l PATH; then
			export PATH=`pam_getenv -l PATH`
		fi
		set -e
                start_daemon $DAEMON
                log_end_msg $?
        fi
  ;;
  stop)
        log_daemon_msg "Stopping Entrance Login Manager" "entranced"
        set +e
        start-stop-daemon --stop --quiet --exec "$DAEMON"
        set -e
        rm $PIDFILE
        log_end_msg $?
  ;;
  reload)
        log_daemon_msg "Scheduling reload of Entrance Login Manager configuration" "gdm"
        set +e
        start-stop-daemon --stop --signal USR1 --quiet --pidfile \
                /var/run/entranced.pid --name entranced
        set -e
        log_end_msg $?
  ;;
  status)
        status_of_proc -p "$PIDFILE" "$DAEMON" entranced && exit 0 || exit $?
  ;;
  restart|force-reload)
        $0 stop
        $0 start
  ;;
  *)
        echo "Usage: /etc/init.d/entrance {start|stop|restart|reload|force-reload|status}"
        exit 1
  ;;
esac

exit 0
