#!/bin/bash
[ -x ./feh ] && {
FEH="./feh"
} || {
FEH="feh"
}
echo ""
echo "This should invoke slideshow mode"
echo "Click mouse button 1 to change slides"
echo "There is no caching, so HUGE slideshows should not create"
echo "any extra overhead"
echo "The list should be pixels sorted"
echo ""
$FEH $1 -V --sort pixels testimages/*.jpg
echo ""
