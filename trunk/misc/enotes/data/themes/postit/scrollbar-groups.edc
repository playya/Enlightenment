#define BTN(NAME, IMG, REL1_REL, REL1_OFF, REL2_REL, REL2_OFF)\
    part { \
      name, "btn_"NAME; \
      type, IMAGE; \
      mouse_events, 1; \
      description { \
        state, "default" 0.0; \
        visible, 1; \
        color, POSTIT_COL 255; \
        rel1 { \
          relative, REL1_REL; \
          offset, REL1_OFF; \
        } rel2 { \
          relative, REL2_REL; \
          offset, REL2_OFF; \
        } \
        image { \
          normal, IMG".png"; \
        } \
      } \
      description { \
        state, "over" 0.0; \
        visible, 1; \
        color, POSTIT_COL 255; \
        rel1 { \
          relative, REL1_REL; \
          offset, REL1_OFF; \
        } rel2 { \
          relative, REL2_REL; \
          offset, REL2_OFF; \
        } \
        image { \
          normal, IMG"_over.png"; \
        } \
      } \
    }

