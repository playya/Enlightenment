<eon w="100%" h="100%">
	<fade id="hs01" x="0%" y="0%" w="100%" h="100%" step="0.5" coordspace="1">
		<anim id="anim01" name="step" begin="#sh01.click" repeat="-1">
			<key value="1" start="0s" calc="0"/>
			<key value="0" start="3s" calc="0"/>
			<key value="1" start="6s" calc="0"/>
		</anim>
		<image file="tiger.png" x="0%" y="0%" w="100%" h="100%" coordspace="1"/>
		<checker x="0%" y="0%" color1="white" color2="red" id="sq01" coordspace="1"/>
	</fade>
	<rect x="0%" y="0%" w="100%" h="100%" color="white"/>
	<!-- rectangles -->
	<rect id="r01" x="50" y="50" w="80" h="80" fill_paint="#hs01">
		<anim name="x" begin="#r01.click" repeat="-1">
			<key value="50" start="0s" calc="0"/>
			<key value="50" start="3s" calc="0"/>
			<key value="150" start="6s" calc="0"/>
			<key value="150" start="9s" calc="0"/>
			<key value="50" start="12s" calc="0"/>
		</anim>
		<anim name="y" begin="#r01.click" repeat="-1">
			<key value="50" start="0s" calc="0"/>
			<key value="150" start="3s" calc="0"/>
			<key value="150" start="6s" calc="0"/>
			<key value="50" start="9s" calc="0"/>
		</anim>
	</rect>
</eon>
