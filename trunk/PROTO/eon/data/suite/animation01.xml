<eon>
	<style>
	</style>
	<canvas w="100%" h="100%" id="canvas01">
		<rect x="0" y="0" w="100%" h="100%" fill_color="white"
				 id="rect01"/>
		<image x="40%" y="25%" w="50%" h="50%" file="tiger.png"
				id="image01">
			<!--<animMatrix name="matrix" type="0" dur="3s" from="0" to="0.7" calc="0" begin="click" repeat="-1" id="anim01"/>-->
			<anim name="color" begin="click" repeat="-1"
					id="anim02">
				<key value="0xffff0000" start="0s" calc="0"/>
				<key value="0x66660000" start="5s" calc="0"/>
			</anim>
		</image>
		<rect x="60%" y="10%" w="25%" h="25%" fill_color="0xaa0000aa" id="rect02">
			<anim name="y" begin="click" repeat="3">
				<key value="10%" start="0s" calc="0"/>
				<key value="80%" start="5s" calc="0"/>
			</anim>
			<anim name="color" begin="click" repeat="-1">
				<key value="blue" start="0s"/>
				<key value="0xaaaaaaaa" start="5s"/>
			</anim>
		</rect>
		<rect x="10%" y="45%" w="25%" h="25%" fill_color="red"
				id="rect02">
			<anim id="myanim" name="x" begin="click" repeat="1">
				<key value="10%" start="0s" calc="0"/>
				<key value="60%" start="5s" calc="0"/>
			</anim>
			<anim id="anim04" name="color" begin="#myanim.stop"
					 repeat="-1">
				<key value="red" start="0s"/>
				<key value="0xaaaaaaaa" start="5s"/>
			</anim>
		</rect>
	</canvas>
</eon>
