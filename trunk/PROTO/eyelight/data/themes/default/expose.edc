group
{
    name: "eyelight/expose_slide";
    parts
    {
        part
        {
            name :"base";
            type: RECT;
            mouse_events: 0;
            description
            {
                state: "default" 0.0;
                visible: 0;
                rel1
                {
                    relative: 0.0 0.0;
                }
                rel2
                {
                    relative: 1.0 1.0;
                }
            }
            description
            {
                state: "small" 0.0;
                inherit: "default" 0.0;
                rel1
                {
                    relative: 0.5 0.5;
                }
                rel2
                {
                    relative: 0.5 0.5;
                }
            }
        }
        part
        {
            name :"selection";
            type: IMAGE;
            mouse_events: 0;
            description
            {
                state: "default" 0.0;
                visible: 0;
                image
                {
                    normal: "expose_selection.png";
                }
                fill
                {
                    origin
                    {
                        relative: 0.0 0.0;
                    }
                    size
                    {
                        relative: 1.0 1.0;
                    }
                }
                rel1
                {
                    relative: 0.0 0.0;
                    to: "base";
                }
                rel2
                {
                    relative: 1.0 1.0;
                    to: "base";
                }
            }
            description
            {
                state: "unselect" 0.0;
                inherit: "default" 0.0;
                color: 0 0 0 0;
            }
            description
            {
                state: "select" 0.0;
                inherit: "default" 0.0;
                visible: 1;
            }
        }
        part
        {
            name :"shadow";
            type: IMAGE;
            mouse_events: 0;
            description
            {
                state: "default" 0.0;
                visible: 1;
                image
                {
                    normal: "expose_shadow.png";
                    border: 10 10 10 10;
                }
                fill
                {
                    origin
                    {
                        relative: 0.0 0.0;
                    }
                    size
                    {
                        relative: 1.0 1.0;
                    }
                }
                rel1
                {
                    relative: 0.1 0.1;
                    to: "base";
                }
                rel2
                {
                    relative: 0.97 0.97;
                    to: "base";
                }
            }
        }
        part
        {
            name :"border";
            type: RECT;
            mouse_events: 0;
            description
            {
                state: "default" 0.0;
                visible: 1;
                color: 0 0 0 255;
                rel1.to: "shadow";
                rel2.to: "shadow";
                rel2.offset: -15 -15;
            }
        }
        part
        {
            name: "object.swallow";
            type: SWALLOW;
            mouse_events: 1;
            description
            {
                state: "default" 0.0;
                visible: 1;
                color: 0 0 0 0;
                rel1
                {
                    relative: 0.0 0.0;
                    offset: 1 1;
                    to: "shadow";
                }
                rel2
                {
                    offset: -16 -16;
                    to: "shadow";
                }
            }
        }
    }
    program
    {
        name: "expose_slide_show";
        source: "eyelight";
        signal: "show";
        action: STATE_SET "small" 0.0;
        target: "base";
        after: "expose_slide_show_1";
    }
    program
    {
        name: "expose_slide_show_1";
        source: "eyelight";
        signal: "expose,slide,1";
        action: STATE_SET "default" 0.0;
        target: "base";
        transition: LINEAR 0.2;
    }
    program
    {
        name: "expose_slide_unselect";
        source: "eyelight";
        signal: "expose,slide,unselect";
        action: STATE_SET "unselect" 0.0;
        target: "selection";
        transition: LINEAR 1.0;
    }
    program
    {
        name: "expose_slide_select";
        source: "eyelight";
        signal: "expose,slide,select";
        action: STATE_SET "select" 0.0;
        target: "selection";
    }
    program
    {
        name: "expose_select";
        source: "expose/swallow";
        signal: "mouse,down,1";
        action: SIGNAL_EMIT "expose,slide,choose" "eyelight";
    }
}
