		source: "exalt";
		action: STATE_SET "invisible" 0.0;
		transition: DECELERATE 0.4;
		target: "icon";
                after: "notLink_1";
	    }
            program
	    {
		name: "notLink_1";
		signal: "notLink,1";
		source: "exalt";
		action: STATE_SET "notLink" 0.0;
		transition: DECELERATE 0.4;
		target: "icon";
	    }

        }
    }


