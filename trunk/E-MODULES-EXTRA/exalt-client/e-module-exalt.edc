                    fixed: 1 1;
                }
                description
                {
                    state: "notActivate" 0.0;
                    inherit: "default" 0.0;
                    image.normal: "ethernet_not_activate_link.png";
                }
                description
                {
                    state: "notLink" 0.0;
                    inherit: "default" 0.0;
                    image.normal: "ethernet_not_activate_link.png";
                }
                description
                {
                    state: "invisible" 0.0;
                    inherit: "default" 0.0;
