fonts
{
   font: "VeraBd.ttf" "VeraBd";
}

images
{
    image: "module_icon.png" COMP;
    image: "ethernet.png" COMP;
    image: "wireless.png" COMP;
    image: "wireless_not_activate_link.png" COMP;
    image: "ethernet_not_activate_link.png" COMP;
    image: "encryption.png" COMP;

}

collections
{
   group
     {
	name: "icon";
	max: 24 24;
	parts
	  {
	     part
	       {
		  name: "image";
		  mouse_events: 0;
		  type: IMAGE;
		  description
		    {
		       state: "default" 0.0;
		       image.normal: "module_icon.png";
		    }
	       }
	  }
     }
   group
     {
	name: "modules/exalt/main";
	max: 128 128;
	parts
	  {
	     part
	       {
		  name: "icon";
		  mouse_events: 0;
		  type: IMAGE;
		  description
		    {
		       state: "default" 0.0;
		       aspect: 1.0 1.0;
		       aspect_preference: BOTH;
		       rel1.offset: 2 2;
		       rel2.offset: -3 -3;
		       image.normal: "module_icon.png";
		    }
		  description
		    {
		       state: "bigger" 0.0;
		       inherit: "default" 0.0;
		       rel1.offset: -2 -2;
		       rel2.offset: 3 3;
		    }
	       }
	     part
	       {
		  name: "event";
		  mouse_events: 1;
		  type: RECT;
		  description
		    {
		       state: "default" 0.0;
		       color: 255 255 255 0;
		    }
	       }
	  }
	programs
	  {
	     program
	       {
		  name: "mouse_in";
		  signal: "mouse,in";
		  source: "event";
		  action: STATE_SET "bigger" 0.0;
		  transition: LINEAR 0.1;
		  target: "icon";
	       }
	     program
	       {
		  name: "mouse_out";
		  signal: "mouse,out";
		  source: "event";
		  action: STATE_SET "default" 0.0;
		  transition: LINEAR 0.2;
		  target: "icon";
	       }
	  }
     }

    group
    {
        name: "modules/exalt/icons/encryption";
        max: 128 128;
        parts
        {
            part
            {
                name: "icon";
                mouse_events: 0;
                type: IMAGE;
                description
                {
                    state: "default" 0.0;
                    aspect: 1.0 1.0;
                    aspect_preference: BOTH;
                    image.normal: "encryption.png";
                    visible: 1;
                    color: 255 255 255 255;
                    fixed: 1 1;
                }
                description
                {
                    state: "invisible" 0.0;
                    inherit: "default" 0.0;
                    visible: 0;
                    color: 0 0 0 0;
                }
            }
        }
        programs
        {
            program
	    {
		name: "visibleWhenEssidNew";
		signal: "visible,essid,new";
		source: "exalt";
		action: STATE_SET "invisible" 0.0;
		target: "icon";
                after: "visible";
	    }
            program
	    {
		name: "visible";
		signal: "visible";
		source: "exalt";
		action: STATE_SET "default" 0.0;
		transition: DECELERATE 0.8;
		target: "icon";
	    }
            program
	    {
		name: "invisible";
		signal: "invisible";
		source: "exalt";
		action: STATE_SET "invisible" 0.0;
		transition: DECELERATE 0.8;
		target: "icon";
	    }
        }
    }


    group
