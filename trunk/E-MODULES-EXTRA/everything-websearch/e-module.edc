#define ICON(NAME, FILE, SIZE)			\
  group {					\
  name: NAME ;			 		\
  max: SIZE SIZE;				\
    parts {					\
      part {					\
      name: "icon";                             \
      repeat_events: 1;				\
	description {				\
	state: "default" 0.0;			\
	aspect: 1.0 1.0;			\
	aspect_preference: BOTH;		\
	image.image: FILE COMP;			\
	image.normal: FILE ;			\
	}					\
      }						\
    }						\
  }

collections 
{
  group 
    {
    name: "icon";
    max: 24 24;
      parts 
	{
	  part 
	    {
	    name: "image";
	    mouse_events: 0;
	    type: IMAGE;
