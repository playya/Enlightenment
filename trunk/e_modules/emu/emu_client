  echo "end"
  echo " //This is a comment"
  echo "emu"
  echo "Lock the screen|xscreensaver-command -lock|enlightenment/desktops"
  echo "Go beep|/usr/bin/play /opt/kde3/share/sounds/KDE_Beep_ShortBeep.wav"
