#define IS_IN_PART_INIT \
	new px, py, pw, ph; \
	new x, y, is; \
	is = 0; \
	get_mouse(x, y);
#define IS_IN_PART(pname) \
	get_geometry(PART:pname, px, py, pw, ph); \
	if ((x>=px) && (x<=px+pw) && (y>=py) && (y<=py+ph)) \
		is++;

