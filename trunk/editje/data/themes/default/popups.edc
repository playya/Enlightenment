   group {
      name: "editje/popup";
      parts {
         part {
            name: "bg";
            type: RECT;
            description {
               state: "default" 0.0;
               color: 224 224 224 255;
            }
         }
         part {
            name: "title.bg";
            type: GRADIENT;
            description {
               state: "default" 0.0;
               gradient.spectrum: "bg";
               rel1 {
                  to: "bg";
                  relative: 0.0 0.0;
                  offset: 0 0;
               }
               rel2 {
                  to: "bg";
                  relative: 1.0 0.0;
                  offset: 0 20;
               }
            }
         }
         part {
            name: "title.text";
            type: TEXT;
            description {
               state: "default" 0.0;
               align: 0.5 0.5;
               color_class: "default_label";
               text {
                  text: "TITLE";
                  font: "Sans:style=Bold";
                  size: 12;
                  align: 0.5 0.5;
               }
               rel1.to: "title.bg";
               rel2.to: "title.bg";
            }
         }
         part {
            name: "content.clipper";
            type: RECT;
            description {
               state: "default" 0.0;
               color: 255 255 255 255;
               rel1 {
                  to: "title.bg";
                  relative: 0.0 1.0;
               }
               rel2.to: "bg";
            }
         }
         part {
            name: "content";
            clip_to: "content.clipper";
            type: SWALLOW;
            description {
               state: "default" 0.0;
               rel1 {
                  to: "title.bg";
                  relative: 0.0 1.0;
               }
            }
         }
      }
   }
