//////////////
// ELM Extension
//////////////
collections {
   group {
      name: "elm/entry/base-single/editje_dialog";
      parts {
         part {
            name: "bg";
            type: IMAGE;
            mouse_events: 1;
            description {
               state: "default" 0.0;
               color: 255 255 255 255;
               image {
                  normal: "dialog_entry_bg.png";
                  border: 20 20 0 0;
               }
            }
         }
         part {
            name: "elm.text";
            type: TEXTBLOCK;
            mouse_events: 1;
            scale: 1;
            entry_mode: EDITABLE;
            select_mode: EXPLICIT;
            multiline: 0;
            source: "elm/entry/selection/default"; // selection under
            source4: "elm/entry/cursor/default"; // cursorover
            source5: "elm/entry/anchor/default"; // anchor under
            description {
               state: "default" 0.0;
               text {
                  style: "dialog_entry_single_style";
                  min: 1 1;
	            }
               rel1 {
                  to: "bg";
                  offset: 5 5;
               }
               rel2 {
                  to: "bg";
                  offset: -6 -6;
               }
	         }
	         description {
               state: "disabled" 0.0;
               inherit: "default" 0.0;
	            text {
		            style: "dialog_entry_single_disabled_style";
		            min: 0 1;
	            }
	         }
	      }
      }
      programs {
	      program {
            name: "focus";
            signal: "load";
	         source: "";
	         action: FOCUS_SET;
	         target: "elm.text";
	      }
	      program {
            name: "disable";
	         signal: "elm,state,disabled";
	         source: "elm";
            action: STATE_SET "disabled" 0.0;
            target: "elm.text";
         }
         program {
            name: "enable";
            signal: "elm,state,enabled";
            source: "elm";
            action: STATE_SET "default" 0.0;
            target: "elm.text";
         }
      }
   }


