images {
	image: "shadow_l.png" COMP;
	image: "shadow_r.png" COMP;
	image: "shadow_under.png" COMP;
	image: "shadow_under_bigger.png" COMP;
}

#define SHADOW_LINEAR_BOTTOM(object, size_) \
         part { \
            name: object".shadow.b"; \
            type: GRADIENT; \
            mouse_events: 0; \
            description { \
               state: "default" 0.0; \
               gradient.spectrum: "shadow"; \
               rel1 { \
                  to: object; \
                  relative: 0.0 1.0; \
                  offset: 0 0; \
               } \
               rel2 { \
                  to: object; \
                  relative: 1.0 1.0; \
                  offset: -1 (size_-1); \
               } \
            } \
         } \

#define SHADOW_LINEAR_TOP(object, size_) \
         part { \
            name: object".shadow.t"; \
            type: GRADIENT; \
            mouse_events: 0; \
            description { \
               state: "default" 0.0; \
               gradient.spectrum: "shadow"; \
               fill { \
                  angle: 180; \
                  origin.relative: 0.0 1.0; \
               } \
               rel1 { \
                  to: object; \
                  relative: 0.0 0.0; \
                  offset: 0 (-1-size_); \
               } \
               rel2 { \
                  to: object; \
                  relative: 1.0 0.0; \
                  offset: -1 -1; \
               } \
            } \
         } \

#define SHADOW_LINEAR_LEFT(object, size_) \
         part { \
            name: object".shadow.l"; \
            type: IMAGE; \
            mouse_events: 0; \
            description { \
               state: "default" 0.0; \
               image.normal: "shadow_l.png"; \
               fill { \
                  smooth: 1; \
                  size.relative: 0 0; \
                  size.offset: size_ 1; \
               } \
               rel1 { \
                  to: object; \
                  relative: 0.0 0.0; \
                  offset: -size_ 0; \
               } \
               rel2 { \
                  to: object; \
                  relative: 0.0 1.0; \
                  offset: -1 -1; \
               } \
            } \
         } \

#define SHADOW_LINEAR_LEFT_UNDER(left, under, size_) \
         part { \
            name: left"-"under".shadow.l"; \
            type: IMAGE; \
            mouse_events: 0; \
            description { \
               state: "default" 0.0; \
               image.normal: "shadow_l.png"; \
               fill { \
                  smooth: 1; \
                  size.relative: 0 0; \
                  size.offset: size_ 1; \
               } \
               rel1 { \
                  to_x: left; \
                  to_y: under; \
                  relative: 0.0 1.0; \
                  offset: -size_ 0; \
               } \
               rel2 { \
                  to: left; \
                  relative: 0.0 1.0; \
                  offset: -1 -1; \
               } \
            } \
         } \

