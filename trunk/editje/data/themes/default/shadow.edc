#define SHADOW_RECT(object, size_) \
         SHADOW_LINEAR_TOP(object, size_) \
         SHADOW_LINEAR_BOTTOM(object, size_) \
         SHADOW_LINEAR_LEFT(object, size_) \
         SHADOW_LINEAR_RIGHT(object, size_) \
         part { \
            name: object".shadow.tl"; \
            type: GRADIENT; \
            mouse_events: 0; \
            description { \
               state: "default" 0.0; \
               gradient { \
                  type: "rectangular"; \
