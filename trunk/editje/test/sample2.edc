spectra {
   spectrum {
      name: "shadow";
      color: 0 0 0 255 1;
      color: 0 0 0 0 1;
   }
}

images {
   image: "image.png" COMP;
   image: "shadow_under.png" COMP;
}

fonts {
   font: "DejaVuSans-Bold.ttf" "Bold";
   font: "DejaVuSans.ttf" "Regular";
   font: "DejaVuSansMono.ttf" "Mono";
}

collections {
   group {
      name: "layout";
      min: 500 500;

      parts {
         part {
            name: "bg";
            type: RECT;
            mouse_events: 0;
            description {
               state: "default" 0.0;
               color: 255 255 255 255;
               rel1 {
                  relative: 0.0 0.0;
                  offset: 0 0;
               }
               rel2 {
                  relative: 1.0 1.0;
                  offset: -1 -1;
               }
            }
         }

         part {
            name: "gradient";
            type: GRADIENT;
            mouse_events: 0;
            description {
               state: "default" 0.0;
               gradient.spectrum: "shadow";
               rel1 {
                  to: "bg";
                  relative: 0.0 0.0;
               }
               rel2 {
                  to: "bg";
                  relative: 1.0 0.1;
               }
            }
         }

         part {
            name: "image";
            type: IMAGE;
            mouse_events: 0;
            description {
               state: "default" 0.0;
               color: 255 255 255 255;
               rel1 {
                  to: "gradient";
                  relative: 0.05 0.5;
               }
               rel2 {
                  relative: 0.2 0.3;
               }
               image {
                  normal: "image.png";
               }
            }
         }

         part {
            name: "image2";
            type: IMAGE;
            mouse_events: 0;
            description {
               state: "default" 0.0;
               color: 255 255 255 255;
               rel1 {
                  to: "gradient";
                  relative: 0.7 1.1;
               }
               rel2 {
                  to_y: "gradient";
                  relative: 0.95 2.0;
               }
               image {
                  normal: "shadow_under.png";
                  border: 6 2 2 6;
                  middle: 0;
               }
            }
         }

         part {
            name: "rect1";
            type: RECT;
            mouse_events: 1;
            description {
               state: "default" 0.0;
               color: 0 0 255 255;
               visible: 1;
               rel1 {
                  to_x: "image";
                  to_y: "gradient";
                  relative: 1.0 0.3;
               }
               rel2 {
                  to_x: "group";
                  to_y: "gradient";
                  relative: 1.2 0.8;
               }
            }
         }

         part {
            name: "text";
            type: TEXT;
            mouse_events: 1;
            description {
               state: "default" 0.0;
               color: 255 0 255 255;
               color2: 255 0 0 255;
               color3: 0 0 255 255;
               visible: 1;
               rel1 {
                  to: "image2";
               }
               rel2 {
                  to: "image2";
               }
               text {
                  text: "FILENAME";
                  font: "Sans:style=Bold";
                  size: 10;
                  align: 0.0 0.5;
                  elipsis: 0.0;
               }
            }
         }

         part {
            name: "rect2";
            type: RECT;
            mouse_events: 1;
            description {
               state: "default" 0.0;
               color: 255 0 0 255;
               visible: 1;
               rel1 {
                  to_x: "group";
                  to_y: "gradient";
                  relative: 2.0 0.3;
                  offset: 20 -10;
               }
               rel2 {
                  to_x: "image2";
                  to_y: "gradient";
                  relative: 0.0 0.8;
                  offset: 10 10;
               }
            }
         }

         part {
            name: "swallow";
            type: SWALLOW;
            description {
               state: "default" 0.0;
               visible: 1;
               rel1 {
                  relative: 0.0 0.0;
                  offset: 80 80;
               }
               rel2 {
                  relative: 1.0 1.0;
                  offset: -81 -11;
               }
            }
         }

         part {
            name: "group";
            type: GROUP;
            source: "another_group";
            description {
               state: "default" 0.0;
               visible: 1;
               rel1 {
                  relative: 0.05 0.6;
               }
               rel2 {
                  to_x: "image";
                  relative: 1.0 0.95;
               }
            }
         }
      }
   }

   group {
      name: "another_group";
      parts {
         part {
            name: "rect1";
            type: RECT;
            mouse_events: 1;
            description {
               state: "default" 0.0;
               color: 255 0 0 255;
               visible: 1;
               rel1 {
                  relative: 0.1 0.25;
               }
               rel2 {
                  relative: 0.45 0.6;
               }
            }
         }
         part {
            name: "rect2";
            type: RECT;
            mouse_events: 1;
            description {
               state: "default" 0.0;
               color: 0 255 0 255;
               visible: 1;
               rel1 {
                  relative: 0.25 0.1;
               }
               rel2 {
                  relative: 0.6 0.45;
               }
            }
         }
         part {
            name: "rect3";
            type: RECT;
            mouse_events: 1;
            description {
               state: "default" 0.0;
               color: 0 0 255 255;
               visible: 1;
               rel1 {
                  relative: 0.55 0.4;
               }
               rel2 {
                  relative: 0.9 0.75;
               }
            }
         }
         part {
            name: "rect4";
            type: RECT;
            mouse_events: 1;
            description {
               state: "default" 0.0;
               color: 0 0 0 255;
               visible: 1;
               rel1 {
                  relative: 0.4 0.55;
               }
               rel2 {
                  relative: 0.75 0.9;
               }
            }
         }
      }
   }
}
