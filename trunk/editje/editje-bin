import os
import sys

import elementary

from editje.editje import Editje
from editje.openfile import OpenFile

if __name__ == "__main__":
    elementary.init()
    elementary.finger_size_set(15)
    elementary.policy_set(elementary.ELM_POLICY_QUIT,
                          elementary.ELM_POLICY_QUIT_LAST_WINDOW_CLOSED)

    if len(sys.argv) > 1:
        editje = Editje()
        editje.file = os.path.realpath(sys.argv[1])
        if len(sys.argv) > 2:
            editje.group = sys.argv[2]
        else:
            editje.select_group()
        editje.show()
    else:
        OpenFile().show()

    elementary.run()
    elementary.shutdown()
