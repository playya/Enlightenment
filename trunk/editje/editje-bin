import os
import sys

import elementary

from editje.editje import Editje
from editje.openfile import OpenFile
from editje.swapfile import SwapFile

if __name__ == "__main__":
    elementary.init()
    elementary.finger_size_set(15)
    elementary.policy_set(elementary.ELM_POLICY_QUIT,
                          elementary.ELM_POLICY_QUIT_LAST_WINDOW_CLOSED)

    files = sys.argv[1:]
    if files:
        for file in files:
            try:
                sf = SwapFile()
                sf.file = os.path.realpath(file)
                sf.open()
            except Exception as e:
                print "Error with file", file, ":", e
                continue

            editje = Editje(sf)
            editje.show()
    else:
        OpenFile().show()

    elementary.run()
    elementary.shutdown()
